<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <Id>f0a9e2f9-1234-4c81-8e76-123456789001</Id>
  <Version>1.0.2.0</Version>
  <ProviderName>CardByte</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="CardByte Signature Manager" />
  <Description DefaultValue="Manage and automatically insert email signatures" />
  <IconUrl DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/CB_logo_high.png" />
  <HighResolutionIconUrl DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/CB_logo_high.png" />
  <SupportUrl DefaultValue="https://cardbyte.ai" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets>
        <bt:Set Name="Mailbox" MinVersion="1.3" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />

          <!-- Message Read -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="readGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="openReadPane">
                  <Label resid="openPaneLabel" />
                  <Supertip>
                    <Title resid="superTipTitle" />
                    <Description resid="superTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Message Compose -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="composeGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="openComposePane">
                  <Label resid="openPaneLabel" />
                  <Supertip>
                    <Title resid="superTipTitle" />
                    <Description resid="superTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>
                <Control xsi:type="Button" id="applySignature">
                  <Label resid="applySignatureLabel" />
                  <Supertip>
                    <Title resid="applySignatureTitle" />
                    <Description resid="applySignatureDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>applySignature</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/16.png" />
        <bt:Image id="icon32" DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/32.png" />
        <bt:Image id="icon80" DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
        <bt:Url id="functionFile" DefaultValue="https://signature.cardbyte.ai/event.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="CardByte Signature" />
        <bt:String id="openPaneLabel" DefaultValue="Open Signature Manager" />
        <bt:String id="superTipTitle" DefaultValue="CardByte Signature Manager" />
        <bt:String id="applySignatureLabel" DefaultValue="Apply Signature" />
        <bt:String id="applySignatureTitle" DefaultValue="Apply Email Signature" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="superTipDescription" DefaultValue="Open the CardByte signature manager to insert or edit email signatures" />
        <bt:String id="applySignatureDescription" DefaultValue="Insert your configured email signature automatically" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>