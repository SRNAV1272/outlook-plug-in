<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <!-- IDENTITY -->
  <Id>f0a9e2f9-1234-4c81-8e76-123456789001</Id>
  <Version>1.0.1.0</Version>
  <ProviderName>Cardbyte</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Cardbyte Signature Manager" />
  <Description DefaultValue="Insert and manage professional email signatures" />

  <IconUrl
    DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/128.png" />
  <HighResolutionIconUrl
    DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/128.png" />

  <SupportUrl DefaultValue="https://cardbyte.ai" />

  <!-- HOST -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- REQUIREMENTS -->
  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" MinVersion="1.5" />
    </Sets>
  </Requirements>

  <!-- FALLBACK -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- PERMISSIONS -->
  <Permissions>ReadWriteItem</Permissions>

  <!-- RULE -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <!-- VERSION OVERRIDES (CORRECT NAMESPACING) -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <VersionOverrides
      xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
      xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>

            <FunctionFile resid="functionFile" />

            <!-- READ -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="cbReadGroup">
                  <Label resid="groupLabel" />
                  <Control xsi:type="Button" id="cbReadBtn">
                    <Label resid="openLabel" />

                    <Supertip>
                      <Title resid="openLabel" />
                      <Description resid="openDescription" />
                    </Supertip>

                    <!-- CORRECTED: Use Icon (without bt: prefix) for VersionOverridesV1_1 -->
                    <Icon>
                      <bt:Image size="16" resid="icon16" />
                      <bt:Image size="32" resid="icon32" />
                      <bt:Image size="64" resid="icon64" />
                    </Icon>

                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="taskpaneUrl" />
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- COMPOSE -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="cbComposeGroup">
                  <Label resid="groupLabel" />
                  <Control xsi:type="Button" id="cbComposeBtn">
                    <Label resid="insertLabel" />

                    <Supertip>
                      <Title resid="insertLabel" />
                      <Description resid="insertDescription" />
                    </Supertip>

                    <!-- CORRECTED: Use Icon (without bt: prefix) for VersionOverridesV1_1 -->
                    <Icon>
                      <bt:Image size="16" resid="icon16" />
                      <bt:Image size="32" resid="icon32" />
                      <bt:Image size="64" resid="icon64" />
                    </Icon>

                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>applySignature</FunctionName>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="icon16"
            DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/16.png" />
          <bt:Image id="icon32"
            DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/32.png" />
          <bt:Image id="icon64"
            DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/64.png" />
        </bt:Images>

        <bt:Urls>
          <bt:Url id="taskpaneUrl" DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
          <bt:Url id="functionFile" DefaultValue="https://signature.cardbyte.ai/event.html" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="Cardbyte Signature" />
          <bt:String id="openLabel" DefaultValue="Open Signature Manager" />
          <bt:String id="insertLabel" DefaultValue="Insert Signature" />
        </bt:ShortStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>