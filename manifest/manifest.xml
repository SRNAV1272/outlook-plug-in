<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xsi:type="MailApp">

  <Id>f0a9e2f9-1234-4c81-8e76-123456789001</Id>
  <Version>1.0.2.2</Version>
  <ProviderName>CardByte</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="CardByte Signature Manager" />
  <Description DefaultValue="Auto-inserts signatures on new emails" />
  <IconUrl
    DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/CB_logo_high.png" />
  <SupportUrl DefaultValue="https://cardbyte.ai" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />

          <!-- Message Compose Button -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="composeGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="insertSignatureBtn">
                  <Label resid="insertSignatureLabel" />
                  <Supertip>
                    <Title resid="insertSignatureTitle" />
                    <Description resid="insertSignatureDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>insertSignature</FunctionName>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="openSettingsBtn">
                  <Label resid="openSettingsLabel" />
                  <Supertip>
                    <Title resid="openSettingsTitle" />
                    <Description resid="openSettingsDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16"
          DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/16.png" />
        <bt:Image id="icon32"
          DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/32.png" />
        <bt:Image id="icon80"
          DefaultValue="https://cardbyteprodstoragehot.blob.core.windows.net/cardbyte-resources/outlook-addin-assets/80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://signature.cardbyte.ai/event.html" />
        <bt:Url id="taskpaneUrl" DefaultValue="https://signature.cardbyte.ai/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="CardByte" />
        <bt:String id="insertSignatureLabel" DefaultValue="Insert Signature" />
        <bt:String id="insertSignatureTitle" DefaultValue="Insert Signature" />
        <bt:String id="openSettingsLabel" DefaultValue="Settings" />
        <bt:String id="openSettingsTitle" DefaultValue="Signature Settings" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="insertSignatureDescription"
          DefaultValue="Insert your email signature automatically" />
        <bt:String id="openSettingsDescription"
          DefaultValue="Open signature settings and management" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>